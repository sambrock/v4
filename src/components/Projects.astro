---
import Exterra from './projects/Exterra.astro';
import Filmlist from './projects/Filmlist.astro';
import Vendee from './projects/Vendee.astro';
---

<div class="space-y-4 my-32">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-2 animate-in-projects">
    <Filmlist class="md:col-span-2" />
    <Vendee />
    <Exterra />
  </div>
</div>

<style is:inline>
  .animate-in-projects {
    animation: 800ms ease 300ms 1 normal backwards running in-y;
  }
</style>

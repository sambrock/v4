---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'a'> {}

const { ...attrs } = Astro.props;
---

<a
  {...attrs}
  class={`inline-flex items-center hover:text-primary gap-2 [&>span]:border-dotted [&>span]:border-b [&>span]:border-black/40 ${attrs.class}`}
  ><slot /></a
>

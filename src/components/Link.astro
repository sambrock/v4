---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'a'> {}

const { ...attrs } = Astro.props;
---

<a
  {...attrs}
  class={`inline-flex items-center gap-2 text-[#e8e8e8cc] hover:text-[#e8e8e8] underline underline-offset-4 decoration-white/20 hover:decoration-white/40 ${attrs.class}`}
  ><slot /></a
>

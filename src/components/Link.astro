---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'a'> {}

const { ...attrs } = Astro.props;
---

<a
  {...attrs}
  class={`inline-flex items-center gap-2 underline underline-offset-4 decoration-white/10 hover:decoration-white/30 ${attrs.class}`}
  ><slot /></a
>

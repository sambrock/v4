---
import type { HTMLAttributes } from 'astro/types';
import BrowserMockup from '../BrowserMockup.astro';
import Project from '../Project.astro';
import ProjectActions from '../ProjectActions.astro';

export type Props = HTMLAttributes<'div'>;

const { slot, ...props } = Astro.props;
---

<Project class:list={[props.class]} {...props}>
  <div class="flex items-center justify-between">
    <div class="w-28 h-full flex items-center">
      <img src="/projects/filmlist/logo.svg" alt="Filmlist logo" class="h-full" />
    </div>
    <ProjectActions projectHref="https://filmlist.sambrock.com" githubHref="https://github.com/sambrock/filmlist" />
  </div>
  <div class="relative">
    <BrowserMockup class="absolute w-[740px] md:w-full">
      <img src="/projects/filmlist/home.webp" alt="FILMLIST web app" />
    </BrowserMockup>
  </div>
</Project>
